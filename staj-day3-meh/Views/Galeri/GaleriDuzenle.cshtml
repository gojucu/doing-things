@model staj_day3_meh.Models.Galeriler

@{
    ViewBag.Title = "GaleriDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GaleriDuzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="hehe form-horizontal">
        <h4>Galeriler</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <h3>Galeri Adı:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Galeri Tipi:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Tipi, new SelectList(ViewBag.galeriListe, "Ad", "Ad"), "")
                @Html.ValidationMessageFor(model => model.Tipi, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Genişlik:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Genişlik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Genişlik, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Yükseklik:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Yükseklik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Yükseklik, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Galeri Aktif:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Aktif)
                @Html.ValidationMessageFor(model => model.Aktif, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Kaydet" class="tus btn btn-lg btn-bitbucket" />
            </div>
        </div>
    </div>
}
    <div class="dosya-ekle col-md-12">
        <div class="nav-tabs-custom">

            <div class="tab-content">
                <div class="active tab-pane" id="activity">

                    <table>
                        <tr>
                            <td colspan="2">
                                @TempData["shortMessage"]
                            </td>
                        </tr>
                        <tr>

                            <td>
                                <input class="form-control" type="file" id="SelectImage" name="Link" required value="" />


                            </td>
                        </tr>

                        <tr>
                            <td>
                                <input class="form-control btn-success show-alert" type="button" onclick="UploadImage() " name="btnKayit01" value="Ekle" />
                            </td>

                        </tr>

                    </table>
                </div><!-- /.tab-pane -->
            </div><!-- /.tab-content -->
        </div>
    </div>
@section Scripts {
    <script>
        var UploadImage = function () {
            var file = $("#SelectImage").get(0).files;
            var data = new FormData;
            data.append("Link", file[0]);
            $.ajax({
                type: "POST",
                url: "/Galeri/GaleriyeResimEkle",
                data: data,
                contentType: false,
                processData: false,
                success: function (sonuc) {

                    if (sonuc) {
                        bootbox.alert({
                            message: "Yüklendi",
                            callback: function () {
                                window.location.reload(true);

                            }
                        })
                        //$("#UploadedImage").append('<img src="/Modul/DisplayingImage?imgID=' + imgID + '"class= dosyalar-image "/>');
                    } else {
                        bootbox.alert({
                            message: "Hata..gerizekalımısın"
                         
                        })
                    }
                 
                }
            })
        }
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}

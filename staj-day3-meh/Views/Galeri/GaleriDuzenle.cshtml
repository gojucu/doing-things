@model staj_day3_meh.Models.Galeriler

@{
    ViewBag.Title = "GaleriDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GaleriDuzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="hehe form-horizontal">
        <h4>Galeriler</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <h3>Galeri Adı:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Galeri Tipi:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Tipi, new SelectList(ViewBag.galeriListe, "Ad", "Ad"), "")
                @Html.ValidationMessageFor(model => model.Tipi, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Genişlik:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Genişlik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Genişlik, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Yükseklik:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Yükseklik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Yükseklik, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Galeri Aktif:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Aktif)
                @Html.ValidationMessageFor(model => model.Aktif, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Kaydet" class="tus btn btn-lg btn-bitbucket" />
            </div>
        </div>
    </div>
}
    <form action="/Galeri/GaleriyeResimEkle" method="post" enctype="multipart/form-data" class="comment-form">

        <input type="hidden" name="GalerilerId" value="@Model.Id" />
        <p>
            <label>Ücret <span class="required">*</span></label><br>
            <input type="file" name="Link" id="Link">
        </p>

        
        <p class="form-submit">
            <input name="submit" type="submit" id="submit" class="submit cs-btn cs-btn-black" value="Başvur">
        </p>
    </form>
@section Scripts {
    <script>
      
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}

@model staj_day3_meh.Models.Galeriler
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "GaleriDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GaleriDuzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="hehe form-horizontal">
        <h4>Galeriler</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <h3>Galeri Adı:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3>Galeri Tipi:</h3>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Tipi, new SelectList(ViewBag.galeriListe, "Ad", "Ad"), "")
                @Html.ValidationMessageFor(model => model.Tipi, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (Model.Tipi == "Ürün Slider")
        {
            <h3>Galeri Tipi:</h3>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Şema, new SelectList(ViewBag.galeriListee, "Ad", "Ad"), "")
                    @Html.ValidationMessageFor(model => model.Şema, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            <h3>Genişlik:</h3>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Genişlik, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Genişlik, "", new { @class = "text-danger" })
                </div>
            </div>

            <h3>Yükseklik:</h3>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Yükseklik, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Yükseklik, "", new { @class = "text-danger" })
                </div>
            </div>

            <h3>Galeri Aktif:</h3>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.Aktif)
                    @Html.ValidationMessageFor(model => model.Aktif, "", new { @class = "text-danger" })
                </div>
            </div>
        }


        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Kaydet" class="tus btn btn-lg btn-bitbucket" />
            </div>
        </div>
    </div>
}
@if (Model.Tipi != "Ürün Slider")
{
    <form class="hehe comment-form">
        <table>
            <tr>
                <td>
                    <input type="hidden" name="GalerilerID" id="GalerilerID" value="@Model.Id" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>Ürüne resim ekle: <span class="required"></span></label><br>
                    <input class="form-control" type="file" id="SelectImage" name="Link" multiple required value="" />
                </td>
            </tr>
            <tr>
                <td>
                    <input class="form-control btn-success show-alert" type="button" onclick="UploadImage() " value="Ekle" />
                </td>
            </tr>



        </table>
    </form>
    @*<form action="/Galeri/GaleriyeResimEkle" method="post" enctype="multipart/form-data" class="hehe comment-form">

            <input type="hidden" name="GalerilerId" value="@Model.Id" />
            <p>
                <label>Galeriye resim ekle: <span class="required"></span></label><br>
                <input type="file" name="Link" id="Link">
            </p>


            <p class="form-submit">
                <input name="submit" type="submit" id="submit" class="btn btn-lg btn-success show-alert" value="Ekle">
            </p>
        </form>*@
}
@if (Model.Tipi == "Full Page Slider")
{
    <div id="carousel-example-generic" style="background-color:black;" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @{
                var yy = 0;

                for (int x = 0; x < ViewBag.sayi; x++)
                {
                    var itemClass = yy++ == 0 ? "active" : "";
                    <li data-target="#carousel-example-generic" data-slide-to="@x" class="@itemClass"></li>
                }
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @{
                var ii = 0;
                foreach (var item2 in ViewBag.galeriResim)
                {
                    var itemClass = ii++ == 0 ? "item active" : "item";
                    <div class="@itemClass">
                        <img class="resim-car dosya-ekle img-responsive" style="height:550px" src="@item2.Link" alt="...">
                        <div class="carousel-caption">
                            <h3>Başlık</h3>
                            <p>İçerik</p>
                        </div>
                    </div>
                }
            }
            <div class="resim-carousel" style="width:100%;height:70px;">
            </div>

        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
else if (Model.Tipi == "Content Slider")
{
    <div id="owl-demo" style="width:100%; margin:auto;background-color:white" class="owl-carousel owl-theme">
        @foreach (var item2 in ViewBag.galeriResim)
        {
            <div class="item"><img src="@item2.Link" class="img-rounded dosyalar-image" title="@item2.Link" /></div>
        }
    </div>
}
else if (Model.Tipi == "Ürün Slider")
{
    if (Model.Şema == null || Model.Şema == "Şema 1")
    {
        <div class="container">
            <div class="urunler-card  row">

                @foreach (var item in ViewBag.galeriResim)
                {
                    <div class="col-md-4 col-sm-6 ">
                        <div class="galeri-page thumbnail">
                            <img class="" src="@item.KucukLink" alt="...">
                            <div class="caption">
                                <h3>Başlık</h3>
                                <p>Fiyat</p>
                                <p><a href="#" class="tus btn btn-primary" role="button">Satın Al</a> <a href="#" class="tus btn btn-default" role="button">Ürün Detayı</a></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else if (Model.Şema == "Şema 2")
    {
        <div class="row">
            @foreach (var item in ViewBag.galeriResim)
            {
                <div class="col-lg-3 col-sm-6 sil-dosya">
                    <img src="@item.KucukLink" class="img-rounded dosyalar-image" />
                </div>
            }

        </div>
    }
    else { 
        <div class="w3-container">
            <div class="row">
                <h2>Card Example</h2>
                @foreach (var item in ViewBag.galeriResim)
                {
                    <div class="col-lg-4 col-sm-12 w3-card  w3-light-grey" @*style="width:30%"*@>

                        <div class="w3-container w3-center">
                            <img src="@item.KucukLink" alt="Avatar" style="width:90%; padding-top:30px;">
                            <h4>Açıklama</h4>
                            <h5>Fiyat</h5>

                            <div class="w3-section">
                                <button class="w3-button w3-green">Satın Al</button>
                            </div>
                        </div>

                    </div>
                }
            </div>
            </div>
            }
            <span class="galeri-page">
                @Html.PagedListPager((IPagedList)ViewBag.galeriResim, Page => Url.Action("GaleriDuzenle", "Galeri", new { Page = Page }))
            </span>
            }
            else { }
            @*<div class="row">
            @foreach (var item in ViewBag.galeriResim)
            {
                <div class="col-lg-3 col-sm-6 sil-dosya">
                    <img src="@item.Link" class="img-rounded dosyalar-image" />
                </div>
            }

        </div>*@

            }

            @section Scripts {
                <script>
                    var UploadImage = function () {
                        var file = $("#SelectImage").get(0).files;
                        var hidden = $("#GalerilerID").val();
                        var data = new FormData();
                        data.append("Link", file[0]);
                        data.append("GalerilerID", hidden);
                        $.ajax({
                            type: "POST",
                            url: "/Galeri/GaleriyeResimEkle",
                            data: data,
                            contentType: false,
                            processData: false,
                            success: function (sonuc) {

                                if (sonuc) {
                                    bootbox.alert({
                                        message: "Yüklendi",
                                        callback: function () {
                                            window.location.reload(true);
                                        }
                                    })
                                    //$("#UploadedImage").append('<img src="/Modul/DisplayingImage?imgID=' + imgID + '"class= dosyalar-image "/>');
                                } else {
                                    bootbox.alert({
                                        message: "Hata.. Lütfen gerekli uzantıya sahip bir dosya giriniz.(.jpg, .png)"

                                    })
                                }

                            }
                        })
                    }
                    $(document).ready(function () {
                        $('.carousel').carousel({
                            interval: 60000
                        })
                        $("#owl-demo").owlCarousel({

                            nav: true, // Show next and prev buttons

                            slideSpeed: 300,
                            paginationSpeed: 400,
                            navText: ["<i class='fa fa-chevron-left'></i>", "<i class='fa fa-chevron-right'></i>"],

                            items: 4,
                            itemsDesktop: false,
                            itemsDesktopSmall: false,
                            itemsTablet: false,
                            itemsMobile: false

                        });

                    });
                </script>
